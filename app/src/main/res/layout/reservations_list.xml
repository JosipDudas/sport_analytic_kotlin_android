<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/rl_product_categories"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

    <RelativeLayout  android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@color/background"
                     android:clickable="true"
                     android:focusable="true"
                     android:orientation="vertical"
                     android:id="@+id/from_to">

        <TextView
                android:id="@+id/txt_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/txt_from"
                android:layout_alignParentStart="true"
                android:textSize="17sp"/>

        <TextView
                android:id="@+id/txt_from_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end"
                android:layout_toEndOf="@+id/txt_from"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/txt_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/to"
                android:layout_below="@+id/txt_from"
                android:textSize="17sp"/>

        <TextView
                android:id="@+id/txt_to_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="end"
                android:layout_below="@+id/txt_from_data"
                android:layout_toEndOf="@+id/txt_to"
                android:textSize="15sp"/>
    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:id="@+id/line"
            android:layout_below="@+id/from_to"
            android:background="#ffffff" />

    <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/description"
            android:layout_below="@+id/line"
            android:textSize="17sp"/>

    <TextView
            android:id="@+id/txt_description_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="end"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/txt_description"
            android:textSize="15sp"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:id="@+id/line_two"
            android:layout_below="@+id/txt_description"
            android:background="#ffffff" />

    <TextView
            android:id="@+id/txt_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/products"
            android:layout_below="@+id/line_two"
            android:textSize="17sp"/>

    <TextView
            android:id="@+id/txt_products_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/txt_description_data"
            android:layout_toEndOf="@+id/txt_products"
            android:textSize="15sp"/>

</RelativeLayout >